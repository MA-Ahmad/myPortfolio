{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "*": [
        "/*"
      ],
      "components/*": [
        "components/*"
      ],
      "lib/*": [
        "lib/*"
      ],
      "data/*": [
        "data/*"
      ],
      "pages/*": [
        "pages/*"
      ],
      "posts/*": [
        "posts/*"
      ],
      "config/*": [
        "config/*"
      ],
      "interfaces/*": [
        "interfaces/*"
      ],
      "public/*": [
        "public/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "pages/blog/[slug].tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
